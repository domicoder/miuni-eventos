rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      // Allow users to create/update their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      // Only allow delete by the user themselves
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Events collection - public read for event discovery
    match /events/{eventId} {
      // Allow public read access for event discovery
      allow read: if true;
      // Allow create only by authenticated users
      allow create: if request.auth != null;
      // Allow update only by the organizer
      allow update: if request.auth != null && 
        (resource.data.organizerId == request.auth.uid || 
         request.resource.data.organizerId == request.auth.uid);
      // Allow delete only by the organizer
      allow delete: if request.auth != null && 
        resource.data.organizerId == request.auth.uid;
    }
    
    // RSVPs collection
    match /rsvps/{rsvpId} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      // Allow users to manage their own RSVPs
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Attendance collection
    match /attendance/{attendanceId} {
      // Allow read access to authenticated users (needed for access control checks)
      allow read: if request.auth != null;
      // Allow organizers to create attendance records
      allow create: if request.auth != null;
      // Attendance records shouldn't be modified once created
      allow update: if false;
      // Allow delete by the organizer who created it or the attendee
      allow delete: if request.auth != null && 
        (resource.data.organizerId == request.auth.uid || 
         resource.data.userId == request.auth.uid);
    }
    
    // Locations collection
    match /locations/{locationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Categories collection - public read for filters
    match /categories/{categoryId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // Departments collection - public read for filters
    match /departments/{departmentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}

